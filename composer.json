{
    "name": "skyian/skylearn-billing-pro",
    "description": "Professional LearnDash billing management with multiple payment gateway support",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Skyian LLC",
            "email": "contact@skyianllc.com",
            "homepage": "https://skyianllc.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "wp-coding-standards/wpcs": "^2.3",
        "phpstan/phpstan": "^1.8",
        "psalm/phar": "^4.30",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "SkyLearnBillingPro\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SkyLearnBillingPro\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html tests/coverage",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "analyze": "phpstan analyse",
        "psalm": "psalm",
        "security:check": "composer audit"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}