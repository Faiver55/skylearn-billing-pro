{
  "name": "skylearn-billing-pro",
  "version": "1.0.0",
  "description": "Professional LearnDash billing management with multiple payment gateway support",
  "main": "admin/js/skylearn-billing-pro-admin.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lint": "eslint admin/js public/js --ext .js",
    "lint:fix": "eslint admin/js public/js --ext .js --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@testing-library/jest-dom": "^5.16.0",
    "babel-jest": "^29.5.0",
    "cypress": "^13.0.0",
    "eslint": "^8.42.0",
    "eslint-config-wordpress": "^2.0.0",
    "eslint-plugin-security": "^1.7.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/js/setup.js"],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "admin/js/**/*.js",
      "public/js/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "tests/coverage/js",
    "coverageReporters": ["html", "text", "lcov"]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Faiver55/skylearn-billing-pro.git"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "billing",
    "learndash",
    "payments",
    "lemon-squeezy"
  ],
  "author": "Skyian LLC <contact@skyianllc.com>",
  "license": "GPL-2.0-or-later"
}