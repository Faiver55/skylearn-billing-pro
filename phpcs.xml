<?xml version="1.0"?>
<ruleset name="SkyLearn Billing Pro Coding Standards">
    <description>Coding standards for SkyLearn Billing Pro</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Exclude specific rules that may conflict with modern practices -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
        <exclude name="Squiz.Commenting.FileComment.Missing"/>
        <exclude name="Squiz.Commenting.ClassComment.Missing"/>
        <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
    </rule>

    <!-- Include PHP Compatibility -->
    <rule ref="PHPCompatibility"/>
    
    <!-- Set minimum PHP version -->
    <config name="testVersion" value="7.4-"/>

    <!-- Security-focused rules -->
    <rule ref="WordPress.Security"/>
    <rule ref="WordPress.WP.PreparedSQL"/>
    <rule ref="WordPress.DB.PreparedSQL"/>
    <rule ref="WordPress.Security.EscapeOutput"/>
    <rule ref="WordPress.Security.NonceVerification"/>
    <rule ref="WordPress.Security.ValidatedSanitizedInput"/>

    <!-- Performance rules -->
    <rule ref="WordPress.DB.SlowDBQuery"/>
    <rule ref="WordPress.WP.AlternativeFunctions"/>

    <!-- File patterns to check -->
    <file>.</file>
    
    <!-- Exclude directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/assets/*</exclude-pattern>
    <exclude-pattern>*/languages/*</exclude-pattern>
    <exclude-pattern>*/monitoring/*</exclude-pattern>
    <exclude-pattern>*/scripts/*</exclude-pattern>
    <exclude-pattern>*/examples/*</exclude-pattern>

    <!-- File extensions to check -->
    <arg name="extensions" value="php"/>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
    
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Check for cross-site scripting -->
    <rule ref="WordPress.Security.EscapeOutput">
        <properties>
            <property name="customAutoEscapedFunctions" type="array">
                <element value="slbp_escape_html"/>
                <element value="slbp_escape_attr"/>
                <element value="slbp_escape_url"/>
            </property>
        </properties>
    </rule>

    <!-- Validate and sanitize input -->
    <rule ref="WordPress.Security.ValidatedSanitizedInput">
        <properties>
            <property name="customSanitizingFunctions" type="array">
                <element value="slbp_sanitize_text"/>
                <element value="slbp_sanitize_email"/>
                <element value="slbp_sanitize_url"/>
            </property>
        </properties>
    </rule>

    <!-- Nonce verification -->
    <rule ref="WordPress.Security.NonceVerification">
        <properties>
            <property name="customNonceVerificationFunctions" type="array">
                <element value="slbp_verify_nonce"/>
                <element value="slbp_check_admin_referer"/>
            </property>
        </properties>
    </rule>

    <!-- Custom severity levels -->
    <rule ref="WordPress.Security">
        <type>error</type>
    </rule>

    <!-- Maximum line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Indentation -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <!-- Array declaration -->
    <rule ref="WordPress.Arrays.ArrayDeclarationSpacing"/>
    <rule ref="WordPress.Arrays.ArrayKeySpacingRestrictions"/>
    <rule ref="WordPress.Arrays.CommaAfterArrayItem"/>

    <!-- Function calls -->
    <rule ref="WordPress.Functions.FunctionCallSignature"/>
    <rule ref="WordPress.Functions.FunctionDeclarationArgumentSpacing"/>

    <!-- Class and function naming -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="slbp"/>
                <element value="SLBP"/>
                <element value="SkyLearn"/>
                <element value="skylearn"/>
            </property>
        </properties>
    </rule>
</ruleset>